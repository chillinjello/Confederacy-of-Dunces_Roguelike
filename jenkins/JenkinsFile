pipeline {
    agent any
    stages {
        stage('Begin Build') {
            steps {
                echo '---- Begin Build ----'
                sh 'ls -a'
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Begin Tests') {
            steps {
                echo '---- Begin Tests ----'
                sh 'mypy *.py'
                sh 'pylint main.py'
                sh 'pyflakes main.py'
            }
        }
    }
}